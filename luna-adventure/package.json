{
    "name": "lunas-adventure",
    "version": "1.0.0",
    "description": "A delightful 2D side-scrolling platformer featuring Luna the Guinea Pig, built with Node.js and SVG graphics",
    "main": "server/index.js",
    "private": true,
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "scripts": {
        "start": "node server/index.js",
        "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
        "build": "npm run build:client && npm run build:assets",
        "test": "jest --coverage",
        "lint": "eslint \"**/*.js\" --ignore-path .gitignore",
        "lint:fix": "eslint \"**/*.js\" --fix --ignore-path .gitignore",
        "server:dev": "nodemon server/index.js",
        "server:start": "node server/index.js",
        "server:test": "jest --config=server/jest.config.js",
        "server:debug": "node --inspect server/index.js",
        "client:dev": "light-server -s client -p 8080 -w \"client/**/*.js, client/**/*.css, client/**/*.html\" -o",
        "client:build": "mkdir -p dist && cp -R client/* dist/ && npm run optimize:assets",
        "client:test": "jest --config=client/jest.config.js",
        "db:init": "node scripts/init-db.js",
        "db:seed": "node scripts/seed-db.js",
        "db:clear": "node scripts/clear-db.js",
        "build:assets": "node scripts/build-assets.js",
        "optimize:assets": "node scripts/optimize-assets.js",
        "generate:sprites": "node scripts/generate-sprites.js",
        "generate:docs": "jsdoc -c jsdoc.conf.json",
        "analyze": "source-map-explorer dist/client/scripts/bundle.js",
        "diagnostics": "node scripts/diagnostics.js",
        "validate": "node scripts/validate-files.js",
        "prepare": "husky install",
        "postinstall": "node scripts/postinstall.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yourusername/lunas-adventure.git"
    },
    "keywords": [
        "game",
        "platformer",
        "svg",
        "guinea-pig",
        "nodejs",
        "javascript",
        "html5",
        "css3",
        "socket.io",
        "multiplayer"
    ],
    "author": "Kurt Mitchell",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/yourusername/lunas-adventure/issues"
    },
    "homepage": "https://github.com/yourusername/lunas-adventure#readme",
    "dependencies": {
        "body-parser": "^1.20.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.4",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "socket.io": "^4.7.2",
        "sqlite3": "^5.1.6",
        "uuid": "^9.0.1",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@babel/core": "^7.23.3",
        "@babel/preset-env": "^7.23.3",
        "babel-jest": "^29.7.0",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "eslint": "^8.54.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-jest": "^27.6.0",
        "husky": "^8.0.3",
        "imagemin": "^8.0.1",
        "imagemin-svgo": "^10.0.1",
        "jest": "^29.7.0",
        "jsdoc": "^4.0.2",
        "light-server": "^2.9.1",
        "lint-staged": "^15.1.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.1.0",
        "rimraf": "^5.0.5",
        "source-map-explorer": "^2.5.3",
        "supertest": "^6.3.3",
        "svgo": "^3.0.4"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,css,md}": [
            "prettier --write"
        ]
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "server/**/*.js",
            "client/scripts/**/*.js",
            "!**/node_modules/**",
            "!**/coverage/**"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 70,
                "branches": 60,
                "functions": 70,
                "lines": 70
            }
        }
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "nodemonConfig": {
        "ignore": [
            "client/*",
            "node_modules/*",
            "coverage/*",
            "dist/*"
        ],
        "delay": "1000"
    },
    "eslintConfig": {
        "extends": [
            "airbnb-base"
        ],
        "env": {
            "browser": true,
            "node": true,
            "jest": true
        },
        "rules": {
            "linebreak-style": 0,
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-console": "off"
        }
    }
}
